<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:id="@android:id/secondaryProgress">
    <shape
      android:innerRadiusRatio="6"
      android:shape="ring"
      android:thicknessRatio="10.0"
      android:useLevel="true">

      <gradient
        android:centerColor="@color/grey_4"
        android:endColor="@color/grey_4"
        android:startColor="@color/grey_4"
        android:type="sweep" />
    </shape>
  </item>

  <item android:id="@android:id/progress">
    <rotate
      android:fromDegrees="270"
      android:pivotX="50%"
      android:pivotY="50%"
      android:toDegrees="270">

      <shape
        android:innerRadiusRatio="6"
        android:shape="ring"
        android:thicknessRatio="10.0"
        android:useLevel="true">

        <rotate
          android:fromDegrees="0"
          android:pivotX="50%"
          android:pivotY="50%"
          android:toDegrees="360" />

        <gradient
          android:centerColor="@color/azur"
          android:endColor="@color/azur"
          android:startColor="@color/azur"
          android:type="sweep" />

      </shape>
    </rotate>
  </item>


