<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="16dp">

      <TextView
        android:id="@+id/fund__label_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fund__label_amount"
        android:textStyle="bold" />

      <TextView
        android:id="@+id/fund__label_amount_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fund__label_amount_desc"
        android:textColor="@color/colorGrey_2"
        android:textSize="12sp" />

      <EditText
        android:id="@+id/fund__input_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />
    </LinearLayout>

    <View
      android:layout_width="fill_parent"
      android:layout_height="1dp"
      android:background="@color/colorGrey_0p" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingBottom="16dp"
      android:paddingTop="16dp">

      <TextView
        android:id="@+id/fund__label_uri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/fund__label_uri"
        android:textStyle="bold" />

      <TextView
        android:id="@+id/fund__label_uri_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/fund__label_uri_desc"
        android:textColor="@color/colorGrey_2"
        android:textSize="12sp" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="#feedc5"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="32dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="8dp"
          android:orientation="horizontal">

          <TextView
            android:id="@+id/fund__label_uri_pubkey"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="@string/fund__label_uri_pubkey"
            android:textAlignment="textEnd"
            android:textSize="12sp"
            android:textStyle="bold" />

          <TextView
            android:id="@+id/fund__value_uri_pubkey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unknown"
            android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="8dp"
          android:orientation="horizontal">

          <TextView
            android:id="@+id/fund__label_uri_ip"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="@string/fund__label_uri_ip"
            android:textAlignment="textEnd"
            android:textSize="12sp"
            android:textStyle="bold" />

          <TextView
            android:id="@+id/fund__value_uri_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unknown"
            android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <TextView
            android:id="@+id/fund__label_uri_port"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="@string/fund__label_uri_port"
            android:textAlignment="textEnd"
            android:textSize="12sp"
            android:textStyle="bold" />

          <TextView
            android:id="@+id/fund__value_uri_port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unknown"
            android:textSize="12sp" />
        </LinearLayout>
      </LinearLayout>

      <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fund__layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <Button
          android:id="@+id/fund__button_random"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="16dp"
          android:layout_weight="1"
          android:onClick="fund_pickRandomNode"
          android:text="@string/fund__button_pickrandom" />

        <Button
          android:id="@+id/fund__button_manual"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:onClick="fund_showManualChannelDialog"
          android:text="@string/fund__button_addmanual" />
      </LinearLayout>
    </LinearLayout>

    <View
      android:layout_width="fill_parent"
      android:layout_height="1dp"
      android:background="@color/colorGrey_0p" />

    <Button
      android:id="@+id/fund__button_openchannel"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:onClick="fund_openChannel"
      android:backgroundTint="@color/colorPrimary"
      android:textColor="@color/white"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:text="@string/fund__button_openchannel"
      android:visibility="gone" />
  </LinearLayout>
</ScrollView>
