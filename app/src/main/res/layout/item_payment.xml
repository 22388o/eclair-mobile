<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:paddingBottom="8dp"
  android:paddingLeft="16dp"
  android:paddingRight="16dp"
  android:paddingTop="8dp">

  <TextView
    android:id="@+id/payment_item_amount"
    android:layout_width="48dp"
    android:layout_height="match_parent"
    android:gravity="right|top"
    android:textStyle="bold"
    android:text="0" />

  <TextView
    android:id="@+id/payment_item_amount_unit"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="left|top"
    android:textColor="@color/colorGrey_0p"
    android:layout_marginLeft="4dp"
    android:textStyle="bold"
    android:text="mBTC" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:orientation="vertical">

    <TextView
      android:id="@+id/payment_item_description"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Name" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <TextView
        android:id="@+id/payment_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STATUS"
        android:textColor="@color/colorPrimary"
        android:textSize="10sp" />
      <TextView
        android:id="@+id/payment_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="Updated at"
        android:textColor="@color/colorGrey_1"
        android:textSize="10sp" />


    </LinearLayout>

  </LinearLayout>
</LinearLayout>
