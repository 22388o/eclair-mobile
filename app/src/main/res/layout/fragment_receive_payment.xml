<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:gravity="top|center"
  android:orientation="vertical">

  <fr.acinq.eclair.wallet.customviews.TitleBar
    android:id="@+id/receivepayment_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/receive_title" />


  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.acinq.eclair.wallet.fragments.ReceivePaymentFragment">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:orientation="vertical">

      <ImageView
        android:id="@+id/receivepayment_qr"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="32dp"
        android:clickable="true"
        android:onClick="home_doCopyReceptionAddress"
        android:src="@drawable/qrcode_placeholder" />

      <TextView
        android:id="@+id/receivepayment_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:fontFamily="monospace"
        android:onClick="home_doCopyReceptionAddress"
        android:padding="16dp"
        android:text="@string/unknown"
        android:textAlignment="center"
        android:textIsSelectable="true"
        android:textSize="12sp" />

    </LinearLayout>

  </ScrollView>
</LinearLayout>
