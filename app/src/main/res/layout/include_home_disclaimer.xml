<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/home_disclaimer"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/primary"
  android:clickable="true"
  android:elevation="10dp">

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_margin="16dp"
    android:background="@drawable/red_stripes_background"
    android:elevation="4dp"
    android:padding="8dp">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <LinearLayout
        android:id="@+id/home_disclaimer_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
          android:id="@+id/home_disclaimer_1_text"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="16dp" />

        <Button
          android:id="@+id/home_disclaimer_finish"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@android:color/transparent"
          android:text="@string/home_disclaimer_1_button_ok"
          android:textColor="@color/green" />

        <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@android:color/transparent"
          android:onClick="home_closeApp"
          android:text="@string/home_disclaimer_button_quit"
          android:textColor="@color/red_faded" />

      </LinearLayout>

    </LinearLayout>
  </ScrollView>
</RelativeLayout>
