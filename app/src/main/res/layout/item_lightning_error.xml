<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/red_faded_dark_x2"
  android:paddingTop="16dp">

  <TextView
    android:id="@+id/lightning_error_counter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:minWidth="64dp"
    android:text="@string/paymentfailure_error_counter"
    android:textAlignment="viewEnd"
    android:textColor="@color/red_faded_light_x1"
    android:textStyle="bold" />

  <TextView
    android:id="@+id/lightning_error_type"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/lightning_error_counter"
    android:layout_marginEnd="4dp"
    android:layout_marginStart="4dp"
    android:layout_toEndOf="@+id/lightning_error_counter"
    android:text="@string/unknown"
    android:textColor="@color/almost_white"
    android:textIsSelectable="true"
    android:textStyle="bold" />

  <TextView
    android:id="@+id/lightning_error_cause_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignEnd="@+id/lightning_error_counter"
    android:layout_below="@+id/lightning_error_type"
    android:text="@string/paymentfailure_error_cause_label"
    android:textAlignment="viewEnd"
    android:textColor="@color/red_faded_light_x1"
    android:textSize="12sp" />

  <TextView
    android:id="@+id/lightning_error_cause"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/lightning_error_type"
    android:layout_marginEnd="4dp"
    android:layout_marginStart="4dp"
    android:layout_toEndOf="@+id/lightning_error_cause_label"
    android:text="@string/paymentfailure_error_cause"
    android:textColor="@color/red_faded_light_x2"
    android:textIsSelectable="true"
    android:textSize="12sp" />

  <TextView
    android:id="@+id/lightning_error_origin_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignEnd="@+id/lightning_error_counter"
    android:layout_below="@+id/lightning_error_cause"
    android:text="@string/paymentfailure_error_origin_label"
    android:textAlignment="viewEnd"
    android:textColor="@color/red_faded_light_x1"
    android:textSize="12sp"
    android:visibility="gone" />

  <TextView
    android:id="@+id/lightning_error_origin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/lightning_error_origin_label"
    android:layout_marginEnd="4dp"
    android:layout_marginStart="4dp"
    android:layout_toEndOf="@+id/lightning_error_origin_label"
    android:text="@string/paymentfailure_error_origin"
    android:textColor="@color/red_faded_light_x2"
    android:textIsSelectable="true"
    android:textSize="12sp"
    android:visibility="gone" />

  <TextView
    android:id="@+id/lightning_error_origin_channel_id_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignEnd="@+id/lightning_error_counter"
    android:layout_below="@+id/lightning_error_origin"
    android:text="@string/paymentfailure_error_origin_channel_label"
    android:textAlignment="viewEnd"
    android:textColor="@color/red_faded_light_x1"
    android:textSize="12sp"
    android:visibility="gone" />

  <TextView
    android:id="@+id/lightning_error_origin_channel_id"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/lightning_error_origin_channel_id_label"
    android:layout_marginEnd="4dp"
    android:layout_marginStart="4dp"
    android:layout_toEndOf="@+id/lightning_error_origin_channel_id_label"
    android:textColor="@color/red_faded_light_x2"
    android:textIsSelectable="true"
    android:textSize="12sp"
    android:visibility="gone" />


  <TextView
    android:id="@+id/lightning_error_hops"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignStart="@+id/lightning_error_type"
    android:layout_below="@+id/lightning_error_origin"
    android:layout_marginEnd="4dp"
    android:alpha="0.8"
    android:textColor="@color/red_faded_light_x2"
    android:textIsSelectable="true"
    android:textSize="12sp"
    android:visibility="gone" />

</RelativeLayout>
