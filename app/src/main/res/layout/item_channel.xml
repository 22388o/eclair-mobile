<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:paddingBottom="8dp"
  android:paddingLeft="16dp"
  android:paddingRight="16dp"
  android:paddingTop="8dp">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="4dp">

    <TextView
      android:id="@+id/channelitem__label_channelid"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Channel Id"
      android:textStyle="bold" />

    <TextView
      android:id="@+id/channelitem__value_channelid"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:ellipsize="end"
      android:maxLines="1"
      android:text="Unknown" />
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="4dp">

    <TextView
      android:id="@+id/channelitem__label_targetnode"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Target Node"
      android:textSize="12sp"
      android:textStyle="bold" />

    <TextView
      android:id="@+id/channelitem__value_targetnode"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:maxLines="1"
      android:textSize="12sp" />
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="4dp">

    <TextView
      android:id="@+id/channelitem__label_balance"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Balance (mBTC)"
      android:textSize="12sp"
      android:textStyle="bold" />

    <TextView
      android:id="@+id/channelitem__value_balance"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:text="0.000"
      android:textSize="12sp" />
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/channelitem__label_status"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Status"
      android:textSize="12sp"
      android:textStyle="bold" />

    <TextView
      android:id="@+id/channelitem__value_status"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:textSize="12sp" />
  </LinearLayout>
</LinearLayout>
