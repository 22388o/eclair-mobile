<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <!-- Custom toolbar -->
  <include layout="@layout/toolbar" />

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGrey_0"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="32dp">

        <TextView
          android:id="@+id/payment__lbl_pr_amount"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="6dp"
          android:text="@string/payment__lbl_pr_amount"
          android:textColor="@color/colorGrey_1"
          android:textSize="10sp" />

        <TextView
          android:id="@+id/payment__value_pr_amount"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="0.00"
          android:textSize="32sp" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">

        <TextView
          android:id="@+id/payment__lbl_pr_pubkey"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginRight="16dp"
          android:text="@string/payment__lbl_pr_pubkey"
          android:textStyle="bold" />

        <TextView
          android:id="@+id/payment__lbl_pr_pubkey_desc"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:text="@string/payment__lbl_pr_pubkey_desc"
          android:textColor="@color/colorGrey_1"
          android:textSize="12sp" />

        <TextView
          android:id="@+id/payment__value_pr_pubkey"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:text="N/A"
          android:textSize="12sp" />
      </LinearLayout>

      <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrey_0p" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">

        <TextView
          android:id="@+id/payment__lbl_pr_paymenthash"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/payment__lbl_pr_paymenthash"
          android:textStyle="bold" />

        <TextView
          android:id="@+id/payment__lbl_pr_paymenthash_desc"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:text="@string/payment__lbl_pr_paymenthash_desc"
          android:textColor="@color/colorGrey_1"
          android:textSize="12sp" />

        <TextView
          android:id="@+id/payment__value_pr_paymenthash"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:text="N/A"
          android:textSize="12sp" />
      </LinearLayout>

      <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrey_0p" />

      <Button
        android:id="@+id/payment__btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_margin="32dp"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="sendPayment"
        android:text="@string/payment__btn_send"
        android:textColor="@color/white" />
    </LinearLayout>
  </ScrollView>
</LinearLayout>
