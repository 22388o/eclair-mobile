<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:scrollbars="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top|center"
    android:orientation="vertical">

    <TextView
      android:id="@+id/close_channel_info"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/app_padding"
      android:text="@string/dialog_close_channel_info"/>


    <TextView
      android:id="@+id/close_channel_force_warning"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/app_padding"
      android:background="@color/grey_0_light_x1"
      android:drawablePadding="8dp"
      android:drawableStart="@drawable/ic_warning_tri"
      android:textColor="@color/grey_3"
      android:textSize="12sp"
      android:padding="@dimen/app_padding"
      android:text="@string/dialog_close_channel_force_warning"/>

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/app_padding"
      android:layout_marginEnd="@dimen/app_padding"
      android:layout_marginBottom="@dimen/app_padding"
      android:text="@string/dialog_close_channel_question"/>

    <LinearLayout
      android:id="@+id/buttons_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center|end"
      android:orientation="horizontal">

      <Button
        android:id="@+id/close_channel_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:onClick="closeApp"
        android:padding="@dimen/app_padding"
        android:text="@string/dialog_close_channel_cancel"
        android:textColor="@color/grey_1" />

      <Button
        android:id="@+id/close_channel_mutual_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:padding="@dimen/app_padding"
        android:text="@string/dialog_close_channel_ok_mutual"
        android:textColor="@color/grey_4" />

      <Button
        android:id="@+id/close_channel_force_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:padding="@dimen/app_padding"
        android:text="@string/dialog_close_channel_ok_force"
        android:textColor="@color/red_faded" />

    </LinearLayout>

  </LinearLayout>
</ScrollView>
