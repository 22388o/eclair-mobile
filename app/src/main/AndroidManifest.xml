<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="fr.acinq.eclair.swordfish">

  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.CAMERA" />

  <supports-screens
    android:anyDensity="true"
    android:largeScreens="true"
    android:normalScreens="true"
    android:resizeable="true"
    android:smallScreens="true"
    android:xlargeScreens="true" />

  <application
    android:name="com.orm.SugarApp"
    android:allowBackup="false"
    android:label="@string/app_name"
    android:theme="@style/AppTheme">

    <!-- sugar metas -->
    <meta-data
      android:name="DATABASE"
      android:value="swordfish.db" />
    <meta-data
      android:name="VERSION"
      android:value="2" />
    <meta-data
      android:name="QUERY_LOG"
      android:value="true" />
    <meta-data
      android:name="DOMAIN_PACKAGE_NAME"
      android:value="fr.acinq.eclair.swordfish.model" />

    <!-- activities -->
    <activity
      android:name=".LauncherActivity"
      android:theme="@style/AppTheme.NoActionBar">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
      android:name=".ChannelActivity"
      android:theme="@style/AppTheme.NoActionBar"></activity>
    <activity
      android:name=".PaymentActivity"
      android:parentActivityName=".ChannelActivity">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value=".ChannelActivity" />
    </activity>
    <activity android:name=".FundActivity" />
  </application>

</manifest>
